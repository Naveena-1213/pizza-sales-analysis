
-- ============================================================
-- 1️⃣ Top 5 Pizzas by Revenue
-- ============================================================

SELECT pizza_name, SUM(total_price) AS total_revenue
FROM pizza_sales
GROUP BY pizza_name
ORDER BY total_revenue DESC
LIMIT 5;

